{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "noEmitOnError": false,
    "sourceMap": true,
    "outDir": "src/dist",
    "strict": true,
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "module": "CommonJS"
  },
  "include": ["./**/*.ts", "./**/*.d.ts"],
  "exclude": ["tests", "scripts", "**/*.test.ts", "**/*.spec.ts"],
  "files": ["types.d.ts"]
}
