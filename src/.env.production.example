# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.production and fill in your actual values
# DO NOT commit .env.production to version control
# Use secure secret management in production (AWS Secrets Manager, etc.)

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=5001
TZ=America/New_York
CLIENT_URL=https://moodring.io
ENABLE_WEBSOCKET=true

# ============================================
# Database Configuration
# ============================================
# Use production database credentials
DB_USER=your_production_db_user
DB_HOST=your_production_db_host
DB_NAME=moodring_prod
DB_PASSWORD=your_production_db_password
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=true

# ============================================
# JWT Configuration (REQUIRED)
# ============================================
# Generate strong secrets: openssl rand -base64 32
# Use different secrets than development!
JWT_SECRET=your_production_jwt_secret_key_here
JWT_REFRESH_SECRET=your_production_jwt_refresh_secret_key_here
ACCESS_TOKEN_EXP=15m
REFRESH_TOKEN_EXP=30d

# ============================================
# Circle Wallet Configuration
# ============================================
# Use production Circle API credentials
CIRCLE_API_KEY=your_production_circle_api_key
CIRCLE_ENTITY_SECRET=your_production_circle_entity_secret
CIRCLE_WALLET_SET_ID=your_production_wallet_set_id
CIRCLE_USDC_TOKEN_ID=your_production_usdc_token_id
CIRCLE_SOL_TOKEN_ID=native
CIRCLE_HOT_WALLET_ID=your_production_hot_wallet_id

# ============================================
# Solana Configuration
# ============================================
# Use mainnet for production
RPC_URL=https://api.mainnet-beta.solana.com
RPC_URL=https://api.mainnet-beta.solana.com
# Production hot wallet private key (base58 or JSON array format)
HOT_WALLET_PRIVATE_KEY=

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_S3_METADATA_BUCKET=moodring-metadata-prod
S3_BUCKET=moodring-metadata-prod
CLOUDFRONT_IMAGE_URL=your-production-cloudfront-domain.cloudfront.net

# ============================================
# Email Configuration
# ============================================
# Production email service (SendGrid, SES, etc.)
EMAIL_STATUS=active
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your_sendgrid_api_key
EMAIL_FROM="MoodRing" <noreply@moodring.app>
EMAIL_SECURE=false

# ============================================
# Encryption
# ============================================
# Use strong encryption password in production
ENCRYPTION_PW=your_production_encryption_password_here

# ============================================
# Deposit Listener Configuration
# ============================================
DEPOSIT_POLL_INTERVAL_MS=5000
DEPOSIT_SIGNATURE_LIMIT=100

# ============================================
# Resolution Processor Configuration
# ============================================
RESOLUTION_POLL_INTERVAL_MS=60000

# ============================================
# Script/Testing Configuration (Optional)
# ============================================
# These are typically not needed in production
API_URL=https://moodring.app/api
ADMIN_EMAIL=admin@moodring.app
ADMIN_USERNAME=admin
ADMIN_WALLET_PRIVATE_KEY=
USER_EMAIL=
OTP=
SKIP_MARKETS=false
GENERATE_MARKETS=false
MARKET_COUNT=0
